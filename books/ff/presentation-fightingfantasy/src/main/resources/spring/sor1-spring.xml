<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.springframework.org/schema/beans" xmlns:p="http://www.springframework.org/schema/p" xmlns:util="http://www.springframework.org/schema/util"
  xmlns:c="http://www.springframework.org/schema/c"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-4.0.xsd">

  <util:constant static-field="hu.zagor.gamebooks.support.bookids.english.Sorcery.THE_SHAMUTANTI_HILLS" id="sor1Id" />

  <bean class="hu.zagor.gamebooks.domain.FfBookInformations" id="sor1Info" c:id-ref="sor1Id" p:coverPath="resources/sor1/cover.jpg" p:resourceDir="sor1"
    p:contentTransformers-ref="defaultSorContentTransformers" p:paragraphResolver-ref="sorRuleBookParagraphResolverL" p:locale-ref="enLocale" p:position="1" p:series-ref="sorTitle"
    p:title="The Shamutanti Hills" p:characterHandler-ref="sorCharacterHandler" p:commandResolvers-ref="ffCommandResolvers" p:unfinished="true" p:hidden="true" p:characterBeanId="sorCharacter"
    p:characterPageDataBeanId="sorCharacterPageData">
    <property name="contents">
      <bean class="hu.zagor.gamebooks.domain.BookContentFiles" c:enemies="sor1enemies.xml" c:items="sor1items.xml" c:paragraphs="sor1content.xml" />
    </property>
    <property name="contentSpecification">
      <bean class="hu.zagor.gamebooks.domain.BookContentSpecification" p:inventoryAvailable="true" p:mapAvailable="true" />
    </property>
  </bean>

  <bean parent="ffCharacterHandler" id="sorCharacterHandler" class="hu.zagor.gamebooks.character.handler.FfCharacterHandler" p:characterGenerator-ref="sorCharacterGenerator"
    p:canEatEverywhere="false" />

</beans>
